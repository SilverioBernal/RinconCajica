@model Orkidea.RinconCajica.Entities.HomeSlider

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<div class="row-fluid" style="padding-top:50px;">
    <div class="span2">
        <div class="span12">                        
            <ul class="nav nav-list well span12">
                <li>Menú</li>
                <li class="active"><a href="@Url.Action("Index", "backend")">Inicio</a></li>
                <li><a href="@Url.Action("Index", "FileUpload")">Medios</a></li>
                <li class="nav-header"><a href="@Url.Action("Index", "HomeSlider")">Página de inicio</a></li>
                <li><a href="@Url.Action("Index", "Page")">Páginas</a></li>
                <li><a href="@Url.Action("Index", "SideBar")">Side Bars</a></li>
                <li class="nav-header">Deportes</li>                
                <li><a href="@Url.Action("Index", "SportCategory")">Categorías</a></li>
                <li><a href="@Url.Action("Index", "SportModality")">Modalidades</a></li>
                <li><a href="@Url.Action("Index", "SportBranch")">Ramas</a></li>
                <li><a href="@Url.Action("Index", "SportSchedule")">Calendario</a></li>
            </ul>
        </div>
    </div>
    <div class="span10">
        <h2>Editar contenido pag. inicio</h2>
        @using (Html.BeginForm())
        {
            <div class="row-fluid">
                <div class="span7">
                    <label>Texto Slider</label>
                    @Html.TextAreaFor(c => c.textoSlider, new { @class = "span12" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span7">
                    <label>Url Imagen</label>
                    @Html.TextBoxFor(c => c.urlImagen, new { @class = "span12" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span2">
                    <label>Texto boton 1</label>
                    @Html.TextBoxFor(c => c.textoBoton1, new { @class = "span12" })
                </div>
                <div class="span5">
                    <label>Url boton 1</label>
                    @Html.TextBoxFor(c => c.urlBoton1, new { @class = "span12" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span2">
                    <label>Texto boton 2</label>
                    @Html.TextBoxFor(c => c.textoBoton2, new { @class = "span12" })
                </div>
                <div class="span5">
                    <label>Url boton 2</label>
                    @Html.TextBoxFor(c => c.urlBoton2, new { @class = "span12" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(c => c.activo, new { @checked = "true" })Activo</label>
                </div>
            </div>    
            <div class="row-fluid">
                <div class="span2">
                    <input type="submit" value="Guardar" class="btn btn-info" />
                </div>
            </div>    
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

