@model Orkidea.RinconCajica.Entities.SideBar

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@Scripts.Render("~/scripts/jquery-1.9.1.min.js")
<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>

<div class="row-fluid" style="padding-top: 50px;">
    <div class="span2">
        <div class="span12">
            <ul class="nav nav-list well span12">
                <li class="nav-header">Menú</li>
                <li><a href="@Url.Action("Index", "backend")">Inicio</a></li>
                <li><a href="@Url.Action("Index", "FileUpload")">Medios</a></li>
                <li><a href="@Url.Action("Index", "HomeSlider")">Página de inicio</a></li>
                <li><a href="@Url.Action("Index", "Page")">Páginas</a></li>
                <li class="active"><a href="@Url.Action("Index", "SideBar")">Side Bars</a></li>
                <li class="nav-header">Deportes</li>                
                <li><a href="@Url.Action("Index", "SportCategory")">Categorías</a></li>
                <li><a href="@Url.Action("Index", "SportModality")">Modalidades</a></li>
                <li><a href="@Url.Action("Index", "SportBranch")">Ramas</a></li>
                <li><a href="@Url.Action("Index", "SportSchedule")">Calendario</a></li>
            </ul>
        </div>
    </div>
    <div class="span10">

        <div class="span12 well" style="min-height: 800px;">
            <h2 style="text-align: center;">Editar side bar</h2>

            @using (Html.BeginForm())
            {
                <div class="row-fluid">
                    <div class="span7">
                        <label>Nombre</label>
                        @Html.TextBoxFor(c => c.nombre, new { @class = "span12" })
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <label>Contenido público</label>
                        @Html.TextAreaFor(c => c.contenido, new { @class = "textarea span12", style = "width: 810px; height: 200px" })
                    </div>
                </div>                
                <div class="row-fluid">
                    <div class="span2">
                        <input type="button" value="Guardar" id="btnSubmit" class="btn btn-info" />
                    </div>
                </div>    
            }
        </div>
    </div>
</div>

<div id="myModal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Error</h3>
    </div>
    <div class="modal-body">
        <p>El nombre es obligatorio</p>
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Cerrar</a>
        <a href="@Url.Action("index")" class="btn btn-danger">Cancelar</a>
    </div>
</div>

<script>
    $('#btnSubmit').click(function () {
        var titulo = $('#nombre').val();

        if (titulo.trim() == "" || titulo == null) {
            $('#myModal').modal()
        }
        else {
            $("form").submit();
        }
    });
</script>

<script>
    tinymce.init({ selector: 'textarea', plugins: "code, image, link" });
</script>
