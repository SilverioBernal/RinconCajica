@model Orkidea.RinconCajica.webFront.Models.vmSportModality

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@Scripts.Render("~/scripts/jquery-1.9.1.min.js")


<div class="span12 well" style="min-height: 800px;">
    <h2 style="text-align: center;">Crear modalidad deportiva</h2>

    @using (Html.BeginForm())
    {
        <div class="row-fluid">
            <div class="span7">
                <label>Nombre de modalidad</label>
                @Html.TextBoxFor(c => c.nombre, new { @class = "span12" })
            </div>
        </div>                
        <div class="row-fluid">
            <div class="span12">
                <label>Deporte<span class="f_req">*</span></label>
                @Html.DropDownListFor(c => c.idDeporte, new SelectList(Model.lsDeportes, "id", "nombre"), new { @class = "span10" })
            </div>
        </div>
            
        <div class="row-fluid">
            <div class="span2">
                <input type="button" value="Guardar" id="btnSubmit" class="btn btn-info" />
            </div>
        </div>    
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div id="myModal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Error</h3>
    </div>
    <div class="modal-body">
        <p>El nombre es obligatorio</p>
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Cerrar</a>
        <a href="@Url.Action("index")" class="btn btn-danger">Cancelar</a>
    </div>
</div>

<script>
    $('#btnSubmit').click(function () {
        var titulo = $('#nombre').val();
        var deporte = $('#idDeporte').val();
        if ((titulo == "" || titulo == null) || (deporte.trim() == "" || deporte == null)) {
            $('#myModal').modal()
        }
        else {
            $("form").submit();
        }
    });
</script>

