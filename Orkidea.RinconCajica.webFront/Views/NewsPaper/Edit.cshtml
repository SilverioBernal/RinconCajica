@model Orkidea.RinconCajica.webFront.Models.vmNews 

@{
    ViewBag.Title = "Edición de noticias";
    Layout = "~/Views/Shared/_LayoutQA.cshtml";
}

@Scripts.Render("~/scripts/jquery-1.9.1.min.js")
<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <h2>Edición de noticias</h2>

    @Html.ValidationSummary(true)

    <div class="row-fluid">
        @Html.LabelFor(model => model.titulo)
        @Html.TextBoxFor(model => model.titulo)
        @Html.ValidationMessageFor(model => model.titulo)
        @Html.HiddenFor(model => model.fecha)
    </div>
    <div class="row-fluid">
        @Html.LabelFor(model => model.contenido)
        @Html.TextAreaFor(model => model.contenido, new { @class = "textarea span12", style = "width: 810px; height: 200px" })

       
        
        @Html.ValidationMessageFor(model => model.contenido)
    </div>
    <br />
     <div class="row-fluid">
        <input type='submit' id='upload-files' value=' Guardar ' class="btn btn-primary" /> | @Html.ActionLink("Volver a la lista","Index")  
    </div>
}

<script>
    $('#btnSubmit').click(function () {
        var titulo = $('#titulo').val();

        if (titulo.trim() == "" || titulo == null) {
            $('#myModal').modal()
        }
        else {
            $("form").submit();
        }
    });

    tinymce.init({ selector: 'textarea', plugins: "code, image, link" });
</script>
