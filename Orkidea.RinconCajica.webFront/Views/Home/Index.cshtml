                    <h1>
                        @{                           
                            string texto = "";

                            foreach (var item in Model)
                            {
                                texto += "<mark>" + item.textoSlider;
                                if (!string.IsNullOrEmpty(item.textoBoton1))
                                {
                                    texto += "<span style='padding-top: 50px;width: 500px;'><a href='" + item.urlBoton1 + "' class='work'>" + item.textoBoton1 + "</a>";
