@model Orkidea.RinconCajica.webFront.Models.vmInstitutionalEvent

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutQA.cshtml";
}

@Styles.Render("~/css/datepicker.css")
@Scripts.Render("~/scripts/jquery-1.9.1.min.js")
@Scripts.Render("~/js/bootstrap-datepicker.js")

<div>
    <h2>Editar evento</h2>

    @using (Html.BeginForm())
    {                
        <div class="row-fluid">
            <div class="span3">
                <label>Inicio</label>
                @Html.TextBoxFor(c => c.tmpInicio)

            </div>
            <div class="span3">
                <label>Fin</label>
                @Html.TextBoxFor(c => c.tmpFin)

            </div>
        </div>                                           
        <div class="row-fluid">
            <div class="span6">
                <label>Nombre evento</label>
                @Html.TextBoxFor(c => c.nombreEvento, new { @class = "span12" })
            </div>
        </div>

        <div id="divDetailEvent" class="row-fluid">
            <div class="row-fluid">
                <div class="span6">
                    <label>Etiqueta 1<span class="f_req">*</span></label>
                    @Html.TextBoxFor(c => c.etiqueta1, new { @class = "span12", placeholder = "Introduzca etiqueta personalizada" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <label>Etiqueta 2<span class="f_req">*</span></label>
                    @Html.TextBoxFor(c => c.etiqueta2, new { @class = "span12", placeholder = "Introduzca etiqueta personalizada" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <label>Etiqueta 3<span class="f_req">*</span></label>
                    @Html.TextBoxFor(c => c.etiqueta3, new { @class = "span12", placeholder = "Introduzca etiqueta personalizada" })
                </div>
            </div>

            <div class="row-fluid">
                <div class="span6">
                    <label>Url Poster<span class="f_req">*</span></label>
                    @Html.TextBoxFor(c => c.poster, new { @class = "span12" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <label>Url Página evento<span class="f_req">*</span></label>
                    @Html.TextBoxFor(c => c.urlPagina, new { @class = "span12" })
                </div>
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="checkbox">
                <label>Visible @Html.CheckBoxFor(c => c.visible)</label>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span2">
                <input type="button" value="Guardar" id="btnSubmit" class="btn btn-info" />
            </div>
        </div>    
    }
</div>

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

<div id="myModal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Error</h3>
    </div>
    <div class="modal-body">
        <p>El nombre del evento es obligatorio</p>
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Cerrar</a>
        <a href="@Url.Action("index")" class="btn btn-danger">Cancelar</a>
    </div>
</div>

<script>
    $('#tmpInicio').datepicker({
        format: 'yyyy-mm-dd', setDate: new Date(),
    });
    $('#tmpFin').datepicker({
        format: 'yyyy-mm-dd', setDate: new Date(),
    });


    $('#btnSubmit').click(function () {
        var titulo = $('#nombreEvento').val();


        if (titulo == "" || titulo == null) {
            $('#myModal').modal()
        }
        else {
            $("form").submit();
        }
    });    
</script>
