<link rel="stylesheet" type="text/css" href="@Url.Content("~/wysihtml5/lib/css/bootstrap.min.css")"></link>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/wysihtml5/lib/css/prettify.css")"></link>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/wysihtml5/src/bootstrap-wysihtml5.css")"></link>

<script src="@Url.Content("~/wysihtml5/lib/js/wysihtml5-0.3.0.js")"></script>
<script src="@Url.Content("~/wysihtml5/lib/js/jquery-1.7.2.min.js")"></script>
<script src="@Url.Content("~/wysihtml5/lib/js/prettify.js")"></script>
<script src="@Url.Content("~/wysihtml5/lib/js/bootstrap.min.js")"></script>
<script src="@Url.Content("~/wysihtml5/src/bootstrap-wysihtml5.js")"></script>


<div class="row-fluid">
    <div class="span2">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Index", "FileUpload")">Medios</a></li>
            <li class="active"><a href="#">Página de inicio</a></li>
            <li class="active" ><a href="@Url.Action("Index", "Page")">Páginas internas</a></li>
        </ul>
    </div>
    <div class="span10">
        <h2>Editar página interna</h2>
        <div id="summernote">Hello Summernote</div>
        @using (Html.BeginForm())
        {
            <div class="row-fluid">
                <div class="span7">
                    <label>Texto Slider</label>
                    @Html.TextBoxFor(c => c.titulo, new { @class = "span12" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label>Texto principal</label>
                    @Html.TextAreaFor(c => c.contenidoPrincipal, new { @class = "textarea span12", style="width: 810px; height: 200px" })
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <label>Texto secundario</label>
                    @Html.TextAreaFor(c => c.contenidoSecundario, new { @class = "textarea span12", style="width: 810px; height: 200px" })
                </div>
            </div>    
            
            @*<div class="row-fluid">
                <textarea class="textarea" placeholder="Enter text ..." style="width: 810px; height: 200px"></textarea>
            </div>*@
                    
            <div class="row-fluid">
                <div class="span2">
                    <input type="submit" value="Guardar" class="btn btn-info" />
                </div>
            </div>    
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    //$('.textarea').wysihtml5();

    $('.textarea').wysihtml5({
        "font-styles": true, //Font styling, e.g. h1, h2, etc. Default true
        "emphasis": true, //Italics, bold, etc. Default true
        "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
        "html": true, //Button which allows you to edit the generated HTML. Default false
        "link": true, //Button to insert a link. Default true
        "image": true, //Button to insert an image. Default true,
        "color": false //Button to change color of font  
    });
</script>
