@model Orkidea.RinconCajica.webFront.Models.vmMessageBitacore

@{
    ViewBag.Title = "Recibir Documento";
    Layout = "~/Views/Shared/_LayoutQA.cshtml";
}

<script src="@Url.Content("~/scripts/jquery-1.9.1.min.js")"></script>

@using (Html.BeginForm())
{
    <h2>Sistema de mensajeria - Recepción de documentos</h2>

    @Html.ValidationSummary(true)

    <div class="row-fluid">
        <div class="span9">
            <label class="span12">Origen <span style="color: red; display: none;">Requerido</span></label>
            @Html.DropDownListFor(c => c.origen, new SelectList(Model.lsProveedores, "id", "descripcion"), new { @class = "span12 req" })
        </div>
    </div>
    <div class="row-fluid">
        <div class="span9">
            <label class="span12">Destino <span style="color: red; display: none;">Requerido</span></label>
            @Html.DropDownListFor(c => c.destino, new SelectList(Model.lsDependencias, "id", "descripcion"), new { @class = "span12 req" })
        </div>
    </div>
    <div class="row-fluid">
        <div class="span9">
            <label class="span12">Tipo <span style="color: red; display: none;">Requerido</span></label>
            @Html.DropDownListFor(c => c.descripcionCorta, new SelectList(Model.lsTipoDoc, "key", "value"), new { @class = "span12 req" })
        </div>
    </div>
    <div class="row-fluid">
        <div class="span9">
            <label class="span12">Observaciones</label>
            @Html.TextAreaFor(c => c.descripcionLarga, new { @class = "span12" })
        </div>
    </div>
    <div class="row-fluid">
        <div class="span9">
            @Html.HiddenFor(c => c.tipoRegistro)
            @Html.HiddenFor(c => c.fecha)
        </div>
    </div>
    <div class="row-fluid">
    </div>
    <p>
        <input type="submit" value="Guardar registro" class="btn btn-success" id="btnGuardar" />
        | @Html.ActionLink("Volver a la lista", "List")
    </p>                                                                                     
   
}

<div class="row-fluid">
    <div class="span12">
        @{Html.RenderAction("IndexRecibidoHoy");}
    </div>
</div>
<script>
    $('#btnGuardar').click(function () {
        var socio = '@ViewBag.socio';

        var requeridos = $('.req');
        var falla = 0;

        $(requeridos).each(function () {

            var padre = this.parentNode;
            var etiqueta = $(padre).find('label')
            var validador = etiqueta.find('span')[0];

            if ($(this).val() == "" || $(this).val() == "0") {
                $(validador).css("display", "inline")
                falla++
            }
            else {
                $(validador).css("display", "none")
            }
        });

        if (falla > 0) {
            return false;
        }
    });
</script>
