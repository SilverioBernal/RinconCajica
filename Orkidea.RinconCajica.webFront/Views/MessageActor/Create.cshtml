@model Orkidea.RinconCajica.Entities.MessageActor

@{
    ViewBag.Title = "Creacion de dependencias";
    Layout = "~/Views/Shared/_LayoutQA.cshtml";
}

@using (Html.BeginForm())
{
    <h2>Sistema de mensajeria - Creación de dependencias</h2>

    @Html.ValidationSummary(true)

    <div class="row-fluid">
        @Html.LabelFor(model => model.descripcion, "Dependencia")
        @Html.TextBoxFor(model => model.descripcion)
        @Html.HiddenFor(model => model.tipo)
    </div>
    <div class="row-fluid">
    </div>
    <p>
        <input type='submit' value=' Guardar ' class="btn btn-primary" />
        | @Html.ActionLink("Volver a la lista", "List")
    </p>                                                                                     
   
}
