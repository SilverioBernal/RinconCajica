@model IEnumerable<Orkidea.RinconCajica.Entities.MessageActor>
@{
    ViewBag.Title = "IndexDependencias";
    Layout = "~/Views/Shared/_LayoutQA.cshtml";
}

<script src="@Url.Content("~/scripts/jquery-1.9.1.min.js")"></script>
@Styles.Render("~/content/DataTables")
@Scripts.Render("~/bundles/DataTables")

<div>
    <h2>Proveedores</h2>
    <p>
        <a href="@Url.Action("Upload")" class="btn btn-primary">Cargar proveedores</a>
    </p>
    <div class="row-fluid tablaIndex">
        <div class="span12">
            <table class="table table-bordered table-striped table_vam" id="dt_gal">
                <thead>
                    <tr>

                        <th>Proveedor</th>
                        <th>NIT</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nit)                                
                            </td>
                            <td>                                
                                <a href="@Url.Action("Delete", new { id = item.id})" class="sepV_a" title="Editar"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $('#dt_gal').dataTable();
</script>

