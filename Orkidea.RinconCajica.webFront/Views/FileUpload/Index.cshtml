@model IEnumerable<Orkidea.RinconCajica.Entities.FileUpload>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

@Styles.Render("~/content/DataTables")
@Scripts.Render("~/bundles/DataTables")
<div class="row-fluid">
    <div class="span2">
        <h2>Menú</h2>
        <ul class="nav nav-pills nav-stacked">
            <li class="active"><a href="@Url.Action("Index", "FileUpload")">Medios</a></li>
            <li><a href="@Url.Action("Index", "HomeSlider")">Página de inicio</a></li>
            <li><a href="@Url.Action("Index", "Page")">Páginas internas</a></li>
        </ul>
    </div>
    <div class="span10">

        <h2>Archivos subidos</h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Nuevo archivo</a>            
        </p>
        <table class="table table-bordered table-striped table_vam" id="dt_gal">
            <thead>
                <tr>

                    <th>                        
                        @Html.DisplayNameFor(model => model.fileName)
                    </th>
                    <th>Link</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>                            
                            @Html.DisplayFor(modelItem => item.fileName)
                        </td>
                        <td><a href="@Url.Content("~/UploadedFiles/" +item.fileName)" target="_blank">Ver mas</a></td>
                        <td>                            
                            <a href="@Url.Action("Delete", new { id = item.id })" title="Eliminar"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
<script>
    $('#dt_gal').dataTable();
</script>